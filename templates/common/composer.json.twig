{
    "name": "{{ packageName }}",
    "description": "An addon for Patrimeo",
    "version": "0.0.1",
    "type": "library",
    "keywords": [
        "Patrimeo"
    ],
    "homepage": "https://github.com/{{ vendor }}/{{ slug }}",
    "license": "MIT",
    "authors": [
        {
            "name": "{{ vendor }}",
            "email": "",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/http": "^11.0||^12.0",
        "filament/filament": "^4.0",
        "patrimeo/contracts": "^0.0.1"
    },
    "autoload": {
        "psr-4": {
            "{{ namespace }}\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../contracts"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}